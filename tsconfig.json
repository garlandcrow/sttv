{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["lib/*"]
    },
    "resolveJsonModule": true
  },
  /**
   * Use globals.d.ts instead of compilerOptions.types
   * to avoid limiting type declarations.
   */
  "include": ["globals.d.ts", "src/**/*.ts", "src/**/*.svelte"]
}
